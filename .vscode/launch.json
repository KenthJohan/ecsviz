	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch sample1",
			"type": "cppdbg",
			"request": "launch",
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/examples/sample1",
			"environment": [
				{
					"name": "LD_LIBRARY_PATH",
					"value": "${workspaceFolder}/bin/x64-Linux-debug:${env:HOME}/bake/x64-Linux/debug/lib/"
				},
			],
			"program": "${workspaceFolder}/examples/sample1/bin/x64-Linux-debug/sample1",
			"args": [],
			"osx": {
				"MIMode": "lldb",
				"targetArchitecture": "arm64",
				"externalConsole": false,
			},
			"linux": {
				"externalConsole": false,
			}
		},
	]
}